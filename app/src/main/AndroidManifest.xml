<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.adamapps.muvi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App.CacheApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".MainActivity" />
        <activity android:name=".LettersActivity" />
        <activity android:name=".LetterDetail" />
        <activity android:name=".SeasonsActivity" />
        <activity android:name=".SeasonDetail" />
        <activity
            android:name=".VideoPlayer"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize" />
        <activity android:name=".TestActivity" />
        <activity android:name=".FeaturedMovies" />
        <activity android:name=".Welcome" />
        <activity android:name=".Search" />
        <activity android:name=".SeasonActivityTv4" />
        <activity android:name=".SeasonDetail4Tv" />
        <activity android:name=".WebPlayer"
            android:screenOrientation="landscape"/>
        <activity android:name=".MovieList"></activity>
        <activity android:name=".SearchMovie" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Profile" />
        <activity android:name=".Recent" />
        <activity android:name=".TagShow"></activity>
        <activity android:name=".HDMovie"></activity>
        <activity android:name=".MovieDetail"></activity>
    </application>

</manifest>